<?xml version="1.0"?>
<precice-configuration experimental="on">
  <log>
    <sink filter="%Severity% > info" format="---[ %Severity% ] %Message%" enabled="true" />
  </log>

  <data:scalar name="Heat-Flux" />
  <data:scalar name="Temperature" />

  <mesh name="Fluid-Mesh" dimensions="3">
    <use-data name="Heat-Flux" />
    <use-data name="Temperature" />
  </mesh>

  <mesh name="Solid-Mesh" dimensions="3">
    <use-data name="Heat-Flux" />
    <use-data name="Temperature" />
  </mesh>

  <participant name="Fluid">
    <provide-mesh name="Fluid-Mesh" />
    <receive-mesh name="Solid-Mesh" from="Solid" />
    <write-data name="Heat-Flux" mesh="Fluid-Mesh" />
    <read-data name="Temperature" mesh="Fluid-Mesh" />
    <mapping:nearest-neighbor 
      direction="read" 
      from="Solid-Mesh" 
      to="Fluid-Mesh" 
      constraint="conservative" />
  </participant>

  <participant name="Solid">
    <provide-mesh name="Solid-Mesh" />
    <receive-mesh name="Fluid-Mesh" from="Fluid" />
    <read-data name="Heat-Flux" mesh="Solid-Mesh" />
    <write-data name="Temperature" mesh="Solid-Mesh" />
    <mapping:nearest-neighbor 
      direction="read" 
      from="Fluid-Mesh" 
      to="Solid-Mesh" 
      constraint="conservative" />
  </participant>

  <m2n:sockets acceptor="Fluid" connector="Solid" exchange-directory="/mnt/wsl/TEST_CASE" />

<coupling-scheme:serial-implicit>
    <participants first="Fluid" second="Solid" />
    <max-time value="1.0" />
    <time-window-size value="0.1" />
    <max-iterations value="20" />
    <exchange data="Temperature" mesh="Fluid-Mesh" from="Solid" to="Fluid" />
    <exchange data="Heat-Flux" mesh="Fluid-Mesh" from="Fluid" to="Solid" />
    <relative-convergence-measure limit="1e-5" data="Temperature" mesh="Fluid-Mesh" />
    <relative-convergence-measure limit="1e-5" data="Heat-Flux" mesh="Fluid-Mesh" />
  </coupling-scheme:serial-implicit>
</precice-configuration>